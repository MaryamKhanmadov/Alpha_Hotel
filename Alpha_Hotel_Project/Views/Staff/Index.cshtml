                    <div class="custom-box"><img src="~/assets/img/brand/brand-1.png" alt="brand"></div>
                    <div class="custom-box"><img src="~/assets/img/brand/brand-2.png" alt="brand"></div>
                    <div class="custom-box"><img src="~/assets/img/brand/brand-3.png" alt="brand"></div>
                    <div class="custom-box"><img src="~/assets/img/brand/brand-4.png" alt="brand"></div>
                    <div class="custom-box"><img src="~/assets/img/brand/brand-5.png" alt="brand"></div>
                    <div class="custom-box"><img src="~/assets/img/brand/brand-6.png" alt="brand"></div>
                    <div class="custom-box"><img src="~/assets/img/brand/brand-1.png" alt="brand"></div>
                    <div class="custom-box"><img src="~/assets/img/brand/brand-2.png" alt="brand"></div>
                    <div class="custom-box"><img src="~/assets/img/brand/brand-3.png" alt="brand"></div>
