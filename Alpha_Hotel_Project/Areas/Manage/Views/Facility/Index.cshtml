@model HomeViewModel
@{
    int count = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 style="margin-bottom: 0.5rem !important;" class="mb-4 border-bottom">Facility List</h6>
            <a style="float:right" class="btn btn-danger m-2" asp-action="create" asp-controller="Facility">Create Facility</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Title</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody style="vertical-align: middle;">
                    @foreach (var item in Model.Facilities)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Id</td>
                            <td>
                                <div class="icon">
                                    @Html.Raw(item.Icon)
                                </div>
                            </td>
                            <td>@item.Title</td>
                            <td>
                                <a class="btn btn-sm btn-sm-square btn-outline-success m-2" asp-action="update" asp-route-id="@item.Id" asp-controller="Facility"> <i class="fa fa-pen"></i> </a>
                                <a class="btn btn-sm btn-sm-square btn-outline-danger m-2 delete-button" asp-route-id="@item.Id" asp-action="delete" asp-controller="Facility"> <i class="fa fa-trash"></i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>