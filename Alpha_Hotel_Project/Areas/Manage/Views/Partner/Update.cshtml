@model Partner

<div class="col-sm-12 pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Partner Update</h6>
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label asp-for="ImageFile" class="form-label">ImageFile</label>
                <input class="form-control" asp-for="ImageFile" placeholder="ImageFile...">
            </div>
            <div class="mb-3">
                <img style="border: 1px solid #ddd;border-radius: 4px;padding: 5px;width: 150px;" src="~/uploads/partner/@Model.Image">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>