@model Slider
<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 style="margin-bottom: 1.5rem !important;" class="mb-4 border-bottom">Slider </h6>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Button Text</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody style="vertical-align: middle;">
                        <tr>
                            <th scope="row">1</th>
                            <td>
                                <img style="width: 50px;height:50px;border-radius: 50%;" src="~/uploads/slider/@Model.Image">
                            </td>
                            <td>@Model.Title</td>
                            <td>@Model.ButtonText</td>
                            <td>
                                <a class="btn btn-sm btn-sm-square btn-outline-success m-2" asp-action="update" asp-route-id="@Model.Id" asp-controller="slider"> <i class="fa fa-pen"></i> </a>
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>