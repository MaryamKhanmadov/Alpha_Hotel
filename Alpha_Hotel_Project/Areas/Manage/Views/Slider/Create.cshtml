@model Slider

<div class="col-sm-12 pt-4 px-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Slider Create</h6>
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control" placeholder="Title...">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ButtonText" class="col-sm-2 col-form-label">ButtonText</label>
                <div class="col-sm-10">
                    <input asp-for="ButtonText" class="form-control" placeholder="ButtonText...">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">ImageFile</label>
                <input class="form-control" asp-for="ImageFile" placeholder="ImageFile...">
            </div>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Descreption write here" asp-for="Descreption" style="height: 150px;"></textarea>
                <label asp-for="Descreption">Descreption...</label>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>