@model Order
@{
    ViewData["Title"] = "Detail";
}
<div class="container-fluid pt-4 px-4" style="min-height:50vh">
    <h2 style="margin-bottom: 1.5rem !important;">Detail:</h2>
    <div>
        <div class="card bg-light rounded h-100 p-4" style="max-width: 100vw;">
            <div class="card-body" style="max-width: 100vw;">
                <p style="font-weight:bold">OrderId : @Model.Id</p>
                <p style="font-weight:bold">Create Date : @Model.OrderItem.Order.CreateDate </p>
                <p style="font-weight:bold">Member Name : @Model.OrderItem.Fullname</p>
                <p style="font-weight:bold">Email : @Model.OrderItem.eMail</p>
                <p style="font-weight:bold">Country : @Model.OrderItem.Country</p>
                <p style="font-weight:bold">City : @Model.OrderItem.City</p>
                <p style="font-weight:bold">Address : @Model.OrderItem.Address</p>
                <p style="font-weight:bold">ZipCode : @Model.OrderItem.ZipCode</p>
                <p style="font-weight:bold">Phone : @Model.OrderItem.PhoneNumber</p>
                <p style="font-weight:bold">AdultCount : @Model.OrderItem.AdultCount</p>
                <p style="font-weight:bold">ChildCount : @Model.OrderItem.ChildCount</p>
                <p style="font-weight:bold">DayCount : @Model.OrderItem.DayCount</p>
                <p style="font-weight:bold">StartRentDate : @Model.OrderItem.StartRentDate.ToString("d/MM/yyyy")</p>
                <p style="font-weight:bold">EndRentDate : @Model.OrderItem.EndRentDate.ToString("d/MM/yyyy")</p>
                <p style="font-weight:bold">Total Price : @Model.OrderItem.TotalPrice.ToString("0.00") $</p>
                <p style="font-weight:bold">Note : @Model.OrderItem.Note</p>
                <p style="font-weight:bold">
                    Order Status : <span style="font-size:15px;padding:9px 16px;" class="btn btn-@(Model.OrderStatus == Alpha_Hotel_Project.Enums.OrderStatus.Pending ? "secondary"
                        :(Model.OrderStatus == Alpha_Hotel_Project.Enums.OrderStatus.Accepted ? "success"
                        : "danger")) rounded-pill m-2">@Model.OrderStatus</span>
                </p>
            </div>
                <h5 style="padding:20px;color:#36338f">OrderItem(Room) : </h5>
                <ul style="padding:30px" class="list-group list-group-flush">
                    <li style="font-weight:bold">RoomId : @Model.RoomId</li>
                    <li style="font-weight:bold">CreateDate : @Model.OrderItem.CreateDate</li>
                    <li style="font-weight:bold">RoomType : @Model.OrderItem.Type</li>
                </ul>
            <div class="card-body">
                <a asp-action="accept" asp-controller="order" asp-route-id="@Model.Id" style="font-size:15px;padding:9px 16px;" class="btn btn-success rounded-pill m-2">Accept</a>
                <a asp-action="reject" asp-controller="order" asp-route-id="@Model.Id" style="font-size:15px;padding:9px 16px;" class="btn btn-danger rounded-pill m-2">Reject</a>
            </div>
        </div>
    </div>
</div>
