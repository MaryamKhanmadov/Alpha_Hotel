@model HomeViewModel
@{
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 style="margin-bottom: 0.5rem !important;" class="mb-4 border-bottom">Staff List</h6>
            <a style="float:right" class="btn btn-danger m-2" asp-action="create" asp-controller="staff">Create Staff</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Fullname</th>
                        <th scope="col">Phone number</th>
                        <th scope="col">Profession</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody style="vertical-align: middle;">
                    @foreach (var item in Model.Staffs)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>
                                <img style="width: 50px;height:50px;border-radius: 50%;" src="~/uploads/staff/@item.ImageUrl">
                            </td>
                            <td>@item.Fullname</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Profession.Name</td>
                            <td>
                                <a class="btn btn-sm btn-sm-square btn-outline-success m-2" asp-action="update" asp-route-id="@item.Id" asp-controller="staff"> <i class="fa fa-pen"></i> </a>
                                <a class="btn btn-sm btn-sm-square btn-outline-danger m-2 delete-button" asp-route-id="@item.Id" asp-action="delete" asp-controller="staff"> <i class="fa fa-trash"></i> </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>